<?xml version="1.0" encoding="utf-8"?>
<homePage:WidgetBase
    x:Class="FoxyBrowser716_WinUI.Controls.HomePage.Widgets.TitleWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:homePage="using:FoxyBrowser716_WinUI.Controls.HomePage"
    xmlns:generic="using:FoxyBrowser716_WinUI.Controls.Generic"
    xmlns:material="using:Material.Icons.WinUI3"
    mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5">
        <StackPanel x:Name="RootGrid" Background="DimGray" CornerRadius="10" BorderThickness="2" Padding="4">
            <Viewbox x:Name="RootView" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock x:Name="TitleOfTheBlock"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="FoxyBrowser716" 
                           FontSize="32"/>
            </Viewbox>
            <StackPanel Orientation="Horizontal">
                <generic:FTextButton x:Name="ButtonWebsite" CornerRadius="5" ButtonText="Website" Icon="{material:MaterialIconExt Kind=Link}" OnClick="ButtonWebsite_OnClick"/>
                <generic:FTextButton x:Name="ButtonGithub" CornerRadius="5" ButtonText="GitHub" Icon="{material:MaterialIconExt Kind=Link}" OnClick="ButtonGithub_OnClick"/>
            </StackPanel>
        </StackPanel>
</homePage:WidgetBase>