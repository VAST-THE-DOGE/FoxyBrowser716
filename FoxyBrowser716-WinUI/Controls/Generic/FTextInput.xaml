<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FoxyBrowser716_WinUI.Controls.Generic.FTextInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CustomTextBoxStyle2" TargetType="TextBox">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver"/>
                                    <VisualState x:Name="Focused"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="BorderElement"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ScrollViewer x:Name="ContentElement"
                                              Grid.Column="0"
                                              HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                                              HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                              VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
                                              VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                              IsTabStop="False"
                                              ZoomMode="Disabled"
                                              Margin="{TemplateBinding Padding}"
                                              AutomationProperties.AccessibilityView="Raw"/>
                                <TextBlock x:Name="PlaceholderTextContentPresenter"
                                           Grid.Column="0"
                                           Text="{TemplateBinding PlaceholderText}"
                                           Foreground="{ThemeResource TextControlPlaceholderForeground}"
                                           Margin="{TemplateBinding Padding}"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="Root" CornerRadius="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" 
                 Style="{StaticResource CustomTextBoxStyle2}"
                 Margin="5,0,5,0" 
                 Padding="0,0,0,0"
                 IsSpellCheckEnabled="True" 
                 FontSize="18" 
                 GotFocus="SearchBox_OnGotFocus" 
                 LostFocus="SearchBox_OnLostFocus" 
                 KeyUp="SearchBox_OnKeyUp"
                 PlaceholderText=""/>
        <Border Grid.Row="1" x:Name="BottomBar" Height="2" CornerRadius="1"/>
    </Grid>
</UserControl>
