<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FoxyBrowser716.Controls.MainWindow.AiChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mainWindow="using:FoxyBrowser716.Controls.MainWindow"
    xmlns:generic="using:FoxyBrowser716.Controls.Generic"
    xmlns:material="using:Material.Icons.WinUI3"
    mc:Ignorable="d">
    <Grid x:Name="Root" CornerRadius="8,0,8,8" BorderThickness="2" Width="450" HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="TitleText" Height="26" Text="Chat: Loading" VerticalAlignment="Center" HorizontalTextAlignment="Center" FontSize="20" FontWeight="700"/>
        <generic:FIconButton Grid.Row="0" Grid.Column="1" Height="26" Width="26" x:Name="ButtonHistory" CornerRadius="5" Content="{material:MaterialIconExt Kind=History}" OnClick="ButtonHistory_OnClick"/>
        <generic:FIconButton Grid.Row="0" Grid.Column="2" Height="26" Width="26" x:Name="ButtonClose" CornerRadius="5" Content="{material:MaterialIconExt Kind=ArrowCollapseRight}" OnClick="ButtonClose_OnClick"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="MText" Text="warning text here." Visibility="Collapsed" HorizontalTextAlignment="Center" TextAlignment="Center"/>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                      x:Name="Scroller"
                      VerticalScrollBarVisibility="Hidden" 
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Stretch"
                      ZoomMode="Disabled">
            <StackPanel  x:Name="MessageList"/>
        </ScrollViewer>

        <generic:FTextInput Grid.Row="2" Grid.Column="0" x:Name="Input" Height="26" MaxHeight="26" EnterPressed="Input_OnEnterPressed"/>
        <generic:FIconButton Grid.Row="2" Grid.Column="1" Width="26" Height="26" x:Name="ButtonBraveMode" Content="{material:MaterialIconExt Kind=LightbulbAlert}" OnClick="ButtonBraveMode_OnClick"/>
        <generic:FIconButton Grid.Row="2" Grid.Column="2" Width="26" Height="26"  x:Name="ButtonSend" Content="{material:MaterialIconExt Kind=Send}" OnClick="ButtonSend_OnClick"/>
        
        <generic:FTextButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Height="26" CornerRadius="5" x:Name="ButtonNewChat" Icon="{material:MaterialIconExt Kind=Plus}" ButtonText="New Chat" OnClick="ButtonNewChat_OnClick" Visibility="Collapsed"/>
    </Grid>
</UserControl>