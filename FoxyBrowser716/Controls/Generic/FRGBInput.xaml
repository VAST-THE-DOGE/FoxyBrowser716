<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FoxyBrowser716.Controls.Generic.FRGBInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:generic="using:FoxyBrowser716.Controls.Generic"
    mc:Ignorable="d" Width="200">
    <UserControl.Resources>
        <Style x:Key="CustomTextBoxStyle3" TargetType="TextBox">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver"/>
                                    <VisualState x:Name="Focused"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="BorderElement"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ScrollViewer x:Name="ContentElement"
                                              Grid.Column="0"
                                              HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                                              HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                              VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
                                              VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                              IsTabStop="False"
                                              ZoomMode="Disabled"
                                              Margin="{TemplateBinding Padding}"
                                              AutomationProperties.AccessibilityView="Raw"/>
                                <TextBlock x:Name="PlaceholderTextContentPresenter"
                                           Grid.Column="0"
                                           Text="{TemplateBinding PlaceholderText}"
                                           Foreground="{ThemeResource TextControlPlaceholderForeground}"
                                           Margin="{TemplateBinding Padding}"
                                           TextAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="Root" Height="22" BorderThickness="2" CornerRadius="11" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <generic:FIconButton Grid.Column="0" VerticalAlignment="Stretch" MinWidth="10" x:Name="ColorPreview" ForceHighlight="True" SizeChanged="ColorPreview_OnSizeChanged"/>
        <TextBox Grid.Column="1" x:Name="ABox" 
                 Style="{StaticResource CustomTextBoxStyle3}"
                 Height="18" 
                 MaxHeight="18"
                 Margin="5,0,5,0" 
                 Padding="0,0,0,0"
                 IsSpellCheckEnabled="False" 
                 FontSize="14" 
                 PlaceholderText="A"
                 TextAlignment="Center"/>
        <Border Grid.Column="2" x:Name="Div1" Width="2" CornerRadius="1"/>
        <TextBox Grid.Column="3" x:Name="RBox" 
                 Style="{StaticResource CustomTextBoxStyle3}"
                 Height="18" 
                 MaxHeight="18"
                 Margin="5,0,5,0" 
                 Padding="0,0,0,0"
                 IsSpellCheckEnabled="False" 
                 FontSize="14" 
                 PlaceholderText="R"
                 TextAlignment="Center"/>
        <Border Grid.Column="4" x:Name="Div2" Width="2" CornerRadius="1"/>
        <TextBox Grid.Column="5" x:Name="GBox" 
                 Style="{StaticResource CustomTextBoxStyle3}"
                 Height="18" 
                 MaxHeight="18"
                 Margin="5,0,5,0" 
                 Padding="0,0,0,0"
                 IsSpellCheckEnabled="False" 
                 FontSize="14" 
                 PlaceholderText="G"
                 TextAlignment="Center"/>
        <Border Grid.Column="6" x:Name="Div3" Width="2" CornerRadius="1"/>
        <TextBox Grid.Column="7" x:Name="BBox" 
                 Style="{StaticResource CustomTextBoxStyle3}"
                 Height="18" 
                 MaxHeight="18"
                 Margin="5,0,5,0" 
                 Padding="0,0,0,0"
                 IsSpellCheckEnabled="False" 
                 FontSize="14" 
                 PlaceholderText="B"
                 TextAlignment="Center"/>
    </Grid>
</UserControl>