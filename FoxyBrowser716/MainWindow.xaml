<Window x:Class="FoxyBrowser716.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="FoxyBrowser716"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        MinWidth="500"
        MinHeight="300">
    <Grid>
        <DockPanel Background="White">
            <Grid DockPanel.Dock="Top" Background="#1E2332" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="[x] [y] [z] | FoxyBrowser716 [_______________________________]" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Name="ButtonMinimize" Width="30" Height="30" BorderThickness="0" Background="#00000000" Foreground="White" Click="Minimize_Click" Content="{wpf:MaterialIconExt Kind=Minimize}"></Button>
                    <Button Name="ButtonMaximize" Width="30" Height="30" BorderThickness="0" Background="#002D2D30" Foreground="White" Click="MaximizeRestore_Click" Content="{wpf:MaterialIconExt Kind=WindowMaximize}"></Button>
                    <Button Name="ButtonClose" Width="30" Height="30" BorderThickness="0" Background="#002D2D30" Foreground="White"  Click="Close_Click" Content="{wpf:MaterialIconExt Kind=Close}">
                    </Button>
                </StackPanel>
            </Grid>

        </DockPanel>

        <Grid Name="MainGrid">
        </Grid>
    </Grid>
</Window>