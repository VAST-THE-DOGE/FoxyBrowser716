<UserControl x:Class="FoxyBrowser716.TabCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FoxyBrowser716"
             xmlns:wpf="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             Height="30"
             Width="260"
             Background="Transparent">
    <Grid Name="RootPanel" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Viewbox x:Name="TabIcon" Grid.Column="0" Margin="5" Width="20" Height="20" Stretch="Uniform"/>
        <Label x:Name="TitleLabel" Grid.Column="1" Height="30" Foreground="#ffff" Background="Transparent" VerticalAlignment="Center"/>
        <Button x:Name="DuplicateButton" Grid.Column="2" Width="20" Height="20" Margin="5" Background="Transparent" BorderBrush="Transparent" Foreground="#ffff" Content="{wpf:MaterialIconExt Kind=ContentCopy}" />
        <Button x:Name="CloseButton" Grid.Column="3" Width="26" Height="26" Margin="2" Background="Transparent" BorderBrush="Transparent" Foreground="#ffff" Content="{wpf:MaterialIconExt Kind=Close}" />
    </Grid>
</UserControl>